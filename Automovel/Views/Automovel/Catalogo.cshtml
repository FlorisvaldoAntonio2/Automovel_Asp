@model IEnumerable<AutomovelModel>

@{
    ViewBag.Subtitulo = "Catalogo Automoveis";
}

<div class="text-center">

    <h1>Catalogo de Automoveis</h1>

</div>

<partial name="_Mensagem"></partial>

@if (Model.Count() <= 0)
{
    <h1>Não existem automoveis cadastradas até o momento!</h1>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Foto</th>
                <th>Modelo</th>
                <th>Cor</th>
                <th>Portas</th>
                <th>Ano</th>
                <th>Quilometragem</th>
                <th>Montadora</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var auto in Model)
            {
                <tr>
                    <td>
                        @if (@auto.Foto != null || @auto.Foto == "")
                        {
                            <img src="~/Imagens/@auto.Foto" class="rounded-circle" height="40" width="40" asp-append-version="true"/>
                        }
                        else
                       {
                           <img src="~/Imagens/Default.png" class="rounded-circle" height="40" width="40" asp-append-version="true"/>
                        }
                    </td>
                    <td>@auto.Modelo</td>
                    <td>@auto.Cor</td>
                    <td>@auto.Portas</td>
                    <td>@auto.Ano</td>
                    <td>@auto.Quilometragem</td>
                    <td>@auto.Montadora.Name</td>
                    <td>
                        <a asp-action="Cadastro" asp-route-id="@auto.IdAutomovel" class="btn btn-sm btn-secondary">Alterar</a>
                        <a asp-action="Excluir" asp-route-id="@auto.IdAutomovel" class="btn btn-sm btn-danger">Excluir</a>
                        <a asp-action="Exibir" asp-route-id="@auto.IdAutomovel" class="btn btn-sm btn-primary">Exibir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
}
